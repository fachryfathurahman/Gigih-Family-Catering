<p style="color: green"><%= notice %></p>
<h1>Customers</h1>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col"><b>First Name</b></th>
      <th scope="col"><b>Last Name</b></th>
      <th scope="col"><b>Email</b></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td scope="row"><%= customer.first_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.email %></td>
        <td>
          <%= link_to "Show", customer, class:"btn btn-info" %>
        </td>
        <td>
          <%= link_to "Edit", edit_customer_path(customer),  class:"btn btn-secondary" %>
        </td>
        <td>
          <%= button_to "Destroy", customer, method: :delete, class:"btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New customer", new_customer_path, class:"btn btn-secondary" %>
