<p style="color: green"><%= notice %></p>
<h1>Menus</h1>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col"><b>Name</b></th>
      <th scope="col"><b>Price</b></th>
      <th scope="col"><b>Description</b></th>
      <th scope="col"><b>Category</b></th>
    </tr>
  </thead>
  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td scope="row"><%= menu.name %></td>
        <td><%= menu.price %></td>
        <td><%= menu.description %></td>
        <% if menu.category%>
          <td><%= menu.category.name %></td>
        <% else %>
          <td>Record Not Found</td>
        <% end %>
        <td>
          <%= link_to "Show", menu, class:"btn btn-info" %>
        </td>
        <td>
          <%= link_to "Edit", edit_menu_path(menu),  class:"btn btn-secondary" %>
        </td>
        <td>
          <%= button_to "Destroy", menu, method: :delete, class:"btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New menu", new_menu_path , class:"btn btn-secondary"%>
