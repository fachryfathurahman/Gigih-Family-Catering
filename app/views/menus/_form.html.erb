<%= form_with(model: menu) do |form| %>
  <% if menu.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(menu.errors.count, "error") %> prohibited this menu from being saved:</h2>
      <ul>
        <% menu.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price, class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class:"form-control" %>
  </div>
  <br/>
  <div class="field form-group">
    <p>Category</p>
    <%= form.select :category_id, @categories.collect { |category| [category.name, category.id] } %>
  </div>
  <br/>
  <div class="actions">
    <%= form.submit class:'btn btn-secondary' %>
  </div>
<% end %>
